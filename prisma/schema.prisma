enum ChauffeurApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DocumentType {
  NIN
  DRIVERS_LICENSE
  LASDRI
