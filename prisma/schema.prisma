  UNPAID
  PAID
  REFUNDED
  PARTIALLY_REFUNDED
  REFUND_PROCESSING
  REFUND_FAILED
}

enum BookingType {
  DAY
  NIGHT
  FULL_DAY
  AIRPORT_PICKUP
