{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            { "include": "**/*.hbs", "outDir": "dist" },
            { "include": "**/*.mjml", "outDir": "dist" },
            { "include": "**/*.html", "outDir": "dist" },
            { "include": "**/*.sql", "outDir": "dist" }
        ],
        "watchAssets": true
    }
}